@Test
public void testExecute_whenExceptionOccurs_shouldHitCatchBlock() throws Exception {
    // Mock exception from GlobalAtlentic.getLoanIQConnection
    MockedStatic<GlobalAtlentic> globalMock = Mockito.mockStatic(GlobalAtlentic.class);
    globalMock.when(GlobalAtlentic::getLoanIQConnection)
              .thenThrow(new RuntimeException("Simulated DB connection failure"));

    // Inject mock DBTransaction
    Field field = P06_IREP_01_Level.class.getDeclaredField("g_o_dataBaseTransaction");
    field.setAccessible(true);
    field.set(levelUnderTest, mockTransaction);

    try {
        levelUnderTest.execute();
    } catch (P06_IREP_01_ExitApplicationException e) {
        // Expected if rethrown or custom logic exists
    }

    globalMock.close(); // Clean up static mock
}
