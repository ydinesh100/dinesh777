@Test
void testMissingArgumentsThrowsParameterException() throws Exception {
    String[] args = {};
    Constructor<P06_IACC_01_Main> constructor = P06_IACC_01_Main.class.getDeclaredConstructor(String[].class);
    constructor.setAccessible(true);
    Object mainInstance = constructor.newInstance((Object) args);

    InvocationTargetException thrown = assertThrows(InvocationTargetException.class, () -> {
        executeMethod.invoke(mainInstance);
    });

    Throwable rootCause = thrown.getCause();
    assertInstanceOf(P86_IACC_01_ParameterException.class, rootCause);
    assertTrue(rootCause.getMessage().contains("Wrong parameters number"));
}

