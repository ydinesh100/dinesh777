@Before
public void setUp() throws Exception {
    Constructor<P06_IACC_01_Level1DBTransaction> constructor =
            P06_IACC_01_Level1DBTransaction.class.getDeclaredConstructor();
    constructor.setAccessible(true);
    transaction = constructor.newInstance();

    mockConnection = mock(Connection.class);
    mockPreparedStatement = mock(PreparedStatement.class);
    mockResultSet = mock(ResultSet.class);

    // Set the protected 'conn' field in the superclass
    Field connField = P06_IACC_01_DBTransaction.class.getDeclaredField("conn");
    connField.setAccessible(true);
    connField.set(transaction, mockConnection);
}
