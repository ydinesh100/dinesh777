try (MockedStatic<GlobalAtlentic> globalMock = mockStatic(GlobalAtlentic.class)) {
    globalMock.when(GlobalAtlentic::getLoanIQConnection)
              .thenThrow(new SQLException("mock SQL exception"));
    
    assertThrows(
        P06_IACC_01_ExitApplicationException.class,
        () -> {
            Method method = P06_IACC_01_Main.class.getDeclaredMethod("execute");
            method.setAccessible(true);
            method.invoke(null);
        }
    );
}
