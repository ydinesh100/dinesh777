import static org.junit.Assert.*;
import org.junit.Test;

public class GuaranteeCreCodeValidatorTest {

    private final YourClassUnderTest validator = new YourClassUnderTest();

    @Test
    public void testValidateCreCode_withValidCode() {
        String[] args = {"VALID_CODE"}; // Replace with an actual valid code from your enum
        String error = validator.validateCreCode(args);
        assertEquals("", error); // No error expected
    }

    @Test
    public void testValidateCreCode_withInvalidCode() {
        String invalidCode = "INVALID_CODE";
        String[] args = {invalidCode};

        String error = validator.validateCreCode(args);

        assertTrue(error.contains("Cre code parameter must be set with one of the following values:"));
        assertTrue(error.contains("but actual is \"" + invalidCode + "\""));
    }
}
