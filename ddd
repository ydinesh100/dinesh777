@Test 
public void testInitializeDataBaseTransaction() throws Exception {
    // Access and invoke the method using reflection
    Method initializeDataBaseTransactionMethod = P06_IACC_01_Level2.class.getDeclaredMethod("initializeDataBaseTransaction", Connection.class); 
    initializeDataBaseTransactionMethod.setAccessible(true); 
    initializeDataBaseTransactionMethod.invoke(level2, connection); 

    // Access the superclass field g_o_dataBaseTransaction
    Field dataBaseTransactionField = P06_IACC_01_Level2.class.getSuperclass().getDeclaredField("g_o_dataBaseTransaction"); 
    dataBaseTransactionField.setAccessible(true); 
    Object actualTransaction = dataBaseTransactionField.get(level2);

    // âœ… Assertion: Check if it's an instance of the expected class
    assertEquals(P06_IACC_01_Level2DBTransaction.class, actualTransaction.getClass());
}
