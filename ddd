package com.bnpparibas.atlentic.lacc.bopr.level1test;

import static org.junit.Assert.*;
import static org.mockito.Mockito.*;

import java.lang.reflect.Constructor;
import java.lang.reflect.Field;
import java.lang.reflect.Method;
import java.sql.*;
import java.util.*;

import org.junit.Before;
import org.junit.Test;
import org.mockito.MockedStatic;
import org.mockito.Mockito;

import com.bnpparibas.atlentic.common.Outils;
import com.bnpparibas.atlentic.common.utils.DBUtils;
import com.bnpparibas.atlentic.iacc.bopr.bean.P06_IACC_01_BoprRecordBean;
import com.bnpparibas.atlentic.iacc.bopr.level1.P06_IACC_01_Level1DBTransaction;
import com.bnpparibas.atlentic.iacc.bopr.main.P06_IACC_01_Main;
import com.bnpparibas.atlentic.iacc.bopr.resource.P06_IACC_01_PropertiesMgr;

public class P06_IACC_01_Level1DBTransactionTest {

    private Connection mockConnection;
    private PreparedStatement mockPreparedStatement;
    private ResultSet mockResultSet;
    private P06_IACC_01_Level1DBTransaction dbTransaction;

    @Before
    public void setup() throws Exception {
        mockConnection = mock(Connection.class);
        mockPreparedStatement = mock(PreparedStatement.class);
        mockResultSet = mock(ResultSet.class);

        when(mockConnection.prepareStatement(anyString())).thenReturn(mockPreparedStatement);
        when(mockPreparedStatement.executeQuery()).thenReturn(mockResultSet);

        Constructor<P06_IACC_01_Level1DBTransaction> constructor =
                P06_IACC_01_Level1DBTransaction.class.getDeclaredConstructor(Connection.class);
        constructor.setAccessible(true);
        dbTransaction = constructor.newInstance(mockConnection);
    }

    @Test
    public void testInsertRecordsBeansList() throws Exception {
        List<P06_IACC_01_BoprRecordBean> list = new ArrayList<>();
        P06_IACC_01_BoprRecordBean bean = new P06_IACC_01_BoprRecordBean("BRANCH", new Timestamp(System.currentTimeMillis()));
        list.add(bean);

        when(mockPreparedStatement.executeUpdate()).thenReturn(1);

        Method method = P06_IACC_01_Level1DBTransaction.class.getDeclaredMethod("insertRecordsBeansList", List.class);
        method.setAccessible(true);
        int result = (int) method.invoke(dbTransaction, list);

        assertEquals(1, result);
    }

    @Test
    public void testFeedingRecordBean() throws Exception {
        P06_IACC_01_BoprRecordBean bean = new P06_IACC_01_BoprRecordBean("BRANCH", new Timestamp(System.currentTimeMillis()));

        when(mockResultSet.getString(anyString())).thenReturn("test");
        when(mockResultSet.getDate(anyString())).thenReturn(new java.sql.Date(System.currentTimeMillis()));

        Method method = P06_IACC_01_Level1DBTransaction.class.getDeclaredMethod("feedingRecordBean", P06_IACC_01_BoprRecordBean.class, ResultSet.class);
        method.setAccessible(true);
        method.invoke(dbTransaction, bean, mockResultSet);

        // Add a meaningful assertion if possible
        assertNotNull(bean.getBranchCode());
    }

    @Test
    public void testGenerateOperationReference() throws Exception {
        P06_IACC_01_BoprRecordBean bean = new P06_IACC_01_BoprRecordBean("BRANCH", new Timestamp(System.currentTimeMillis()));
        // Use reflection to set private fields if needed
        Field field = bean.getClass().getDeclaredField("idOwner");
        field.setAccessible(true);
        field.set(bean, "OWNER_ID");

        Method method = P06_IACC_01_Level1DBTransaction.class.getDeclaredMethod("generateOperationReference", P06_IACC_01_BoprRecordBean.class);
        method.setAccessible(true);
        String result = (String) method.invoke(dbTransaction, bean);

        assertNotNull(result);
    }

    @Test
    public void testGetExchangeRatesMap() throws Exception {
        when(mockResultSet.next()).thenReturn(true, false);
        when(mockResultSet.getString("cde_currency")).thenReturn("USD");
        when(mockResultSet.getDouble("exchange_rate")).thenReturn(1.1);

        Method method = P06_IACC_01_Level1DBTransaction.class.getDeclaredMethod("getExchangeRatesMap");
        method.setAccessible(true);
        Map<String, Double> result = (Map<String, Double>) method.invoke(dbTransaction);

        assertNotNull(result);
        assertEquals(1.1, result.get("USD"), 0.01);
    }

    @Test
    public void testDeleteConcurrentRecords() throws Exception {
        try (
            MockedStatic<P06_IACC_01_Main> mainMock = Mockito.mockStatic(P06_IACC_01_Main.class);
            MockedStatic<P06_IACC_01_PropertiesMgr> propMock = Mockito.mockStatic(P06_IACC_01_PropertiesMgr.class);
        ) {
            String expectedQuery = "DELETE FROM concurrent_records WHERE cde_branch = ? AND dte_event = ?";
            Timestamp timestamp = new Timestamp(System.currentTimeMillis());

            mainMock.when(P06_IACC_01_Main::get_s_branch).thenReturn("TEST");
            mainMock.when(P06_IACC_01_Main::get_o_eventTimestamp).thenReturn(timestamp);
            propMock.when(() -> P06_IACC_01_PropertiesMgr.getQueryFromPropertiesFile("delete.concurrent.records"))
                    .thenReturn(expectedQuery);

            when(mockPreparedStatement.executeUpdate()).thenReturn(1);

            Method method = P06_IACC_01_Level1DBTransaction.class.getDeclaredMethod("deleteConcurrentRecords");
            method.setAccessible(true);
            method.invoke(dbTransaction);

            verify(mockConnection).prepareStatement(expectedQuery);
            verify(mockPreparedStatement).setString(1, "TEST");
            verify(mockPreparedStatement).setTimestamp(2, timestamp);
            verify(mockPreparedStatement).executeUpdate();
        }
    }
}
