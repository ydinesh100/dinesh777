import org.junit.jupiter.api.Test;

import java.lang.reflect.Constructor;
import java.lang.reflect.Method;

import static org.junit.jupiter.api.Assertions.*;

public class ObjectFactoryReflectionTest {

    @Test
    public void testConstructorUsingReflection() {
        try {
            Constructor<?> constructor = Class.forName("ObjectFactory").getDeclaredConstructor();
            constructor.setAccessible(true);
            Object factory = constructor.newInstance();
            assertNotNull(factory);
        } catch (Exception e) {
            e.printStackTrace();  // ðŸ”´ Print full root cause
            fail("Exception during constructor test: " + e.getMessage());
        }
    }

    @Test
    public void testCreateConnectionsUsingReflection() {
        try {
            Class<?> clazz = Class.forName("ObjectFactory");
            Object factory = clazz.getDeclaredConstructor().newInstance();
            Method method = clazz.getDeclaredMethod("createConnections");
            method.setAccessible(true);
            Object result = method.invoke(factory);
            assertNotNull(result);
            System.out.println("createConnections returned: " + result.getClass().getName());
        } catch (Exception e) {
            e.printStackTrace();  // ðŸ”´ Print full root cause
            fail("Exception during createConnections test: " + e.getMessage());
        }
    }

    @Test
    public void testCreateConnectionsConnectionUsingReflection() {
        try {
            Class<?> clazz = Class.forName("ObjectFactory");
            Object factory = clazz.getDeclaredConstructor().newInstance();
            Method method = clazz.getDeclaredMethod("createConnectionsConnection");
            method.setAccessible(true);
            Object result = method.invoke(factory);
            assertNotNull(result);
            System.out.println("createConnectionsConnection returned: " + result.getClass().getName());
        } catch (Exception e) {
            e.printStackTrace();  // ðŸ”´ Print full root cause
            fail("Exception during createConnectionsConnection test: " + e.getMessage());
        }
    }
}
