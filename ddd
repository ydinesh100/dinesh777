import org.junit.After;
import org.junit.Before;
import org.junit.Test;

import java.io.ByteArrayOutputStream;
import java.io.PrintStream;

import static org.junit.Assert.assertEquals;

public class P06_IACC_01_CreGuaranteeFacilityLevel1MainTest {

    private final ByteArrayOutputStream outContent = new ByteArrayOutputStream();
    private final PrintStream originalOut = System.out;

    private P06_IACC_01_CreGuaranteeFacilityLevel1Main mainProgram;

    @Before
    public void setUpStreams() {
        System.setOut(new PrintStream(outContent));
        mainProgram = new P06_IACC_01_CreGuaranteeFacilityLevel1Main();
    }

    @After
    public void restoreStreams() {
        System.setOut(originalOut);
    }

    @Test
    public void testExecuteMain_withArgument() {
        String[] args = {"test"};
        mainProgram.executeMain(args);
        assertEquals("Processing test input\n", outContent.toString());
    }

    @Test
    public void testExecuteMain_withoutArgument() {
        String[] args = {};
        mainProgram.executeMain(args);
        assertEquals("Processing: \n", outContent.toString());
    }

    @Test
    public void testProcessInput_testInput() {
        mainProgram.processInput("test");
        assertEquals("Processing test input\n", outContent.toString());
    }

    @Test
    public void testProcessInput_otherInput() {
        mainProgram.processInput("something");
        assertEquals("Processing: something\n", outContent.toString());
    }
}

