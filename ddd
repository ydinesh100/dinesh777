@Test
public void testGetBranchCurrencyViaReflection() throws Exception {
    // Step 1: Set up the real or mock object
    Field dbField = P06_IACC_01_Level2.class.getSuperclass().getDeclaredField("g_o_dataBaseTransaction");
    dbField.setAccessible(true);
    Object dbTxnObject = dbField.get(level2);

    // Step 2: Get the method and make it accessible
    Method getBranchCurrencyMethod = dbTxnObject.getClass().getDeclaredMethod("getBranchCurrency");
    getBranchCurrencyMethod.setAccessible(true);

    // Step 3: Invoke the method via reflection
    String branchCurrency = (String) getBranchCurrencyMethod.invoke(dbTxnObject);

    // Step 4: Assertions or print (example)
    System.out.println("Branch Currency: " + branchCurrency);
    assertEquals("EUR", branchCurrency); // use expected value here
}
